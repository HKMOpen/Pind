<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/details_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" 
        android:background="@drawable/texturetastic_gray"
        android:layout_above="@+id/details_ad_space">

        <LinearLayout
            android:id="@+id/details_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_gravity="center_horizontal">

            <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:paddingBottom="10dp" android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" android:gravity="left|center_vertical" android:layout_weight="1">

                    <ImageView
                        android:id="@+id/user_thumb"
                        android:layout_width="50dp"
                        android:layout_height="50dp" android:layout_marginLeft="10dp" 
                        android:scaleType="fitXY"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/details_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="TextView"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/board_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:layout_weight="1"
                            android:text="TextView" />

                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:gravity="right|center_vertical" android:layout_weight="1">

                
                <ImageButton
                    android:id="@+id/pinitem_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_goto"
                    android:background="#00FFFFFF" />

            </LinearLayout>

         	</LinearLayout>

            <FrameLayout
                android:id="@+id/frameLayout3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#C0C0C0C0"
                    android:paddingBottom="2dp"
                    android:paddingRight="2dp" android:layout_gravity="center_horizontal" android:layout_margin="10dp">

                <FrameLayout
                    android:id="@+id/frameLayout2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#A8A8A8A8"
                    android:paddingBottom="3dp"
                    android:paddingRight="3dp" android:layout_gravity="center_horizontal">
                <FrameLayout
                    android:id="@+id/frameLayout4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
					android:layout_gravity="center_horizontal">
                    
                    <FrameLayout
                        android:id="@+id/frameLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="#FFF0F0F0"
                        android:padding="10dp" >

                        <LinearLayout
                            android:id="@+id/linearLayout5"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical" android:layout_gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/details_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" 
                                android:background="#FFF0F0F0" 
                                android:layout_gravity="center_horizontal" android:layout_weight="1" android:adjustViewBounds="true"/>

                            <TextView
                                android:id="@+id/details_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TextView" 
                                android:textSize="20dp"/>
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
				</FrameLayout>
            </FrameLayout>
			<LinearLayout
		        android:id="@+id/linearLayout2"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">

		        <FrameLayout
		            android:id="@+id/frameLayout6"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_weight="1" 
		            android:padding="10dp">

		            <FrameLayout
		                android:id="@+id/linearLayout6"
		                android:layout_width="fill_parent"
		                android:layout_height="match_parent"
		                android:padding="1dp" 
		                android:background="#FFF0F0F0">

		                <LinearLayout
		                    android:id="@+id/repin_layout"
		                    android:layout_width="fill_parent"
		                    android:layout_height="match_parent" android:layout_gravity="center_horizontal" android:gravity="center_horizontal">

		                    <ImageView
		                        android:id="@+id/repin_image"
		                        android:layout_width="15dp"
		                        android:layout_height="15dp"
		                        android:src="@drawable/repin" />

		                    <TextView
		                        android:id="@+id/num_repins"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="TextView" />
		                </LinearLayout>
		            </FrameLayout>

		        </FrameLayout>

		        <FrameLayout
		            android:id="@+id/frameLayout5"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1" 
		            android:padding="10dp">

		            <FrameLayout
		                android:id="@+id/linearLayout7"
		                android:layout_width="fill_parent"
		                android:layout_height="match_parent"
		                android:padding="1dp"
		                android:background="#FFF0F0F0" >

		                <LinearLayout
		                    android:id="@+id/like_layout"
		                    android:layout_width="fill_parent"
		                    android:layout_height="match_parent" android:gravity="center_horizontal" android:layout_gravity="center_horizontal">

		                    <ImageView
		                        android:id="@+id/like_image"
		                        android:layout_width="15dp"
		                        android:layout_height="15dp"
		                        android:src="@drawable/heart" />

		                    <TextView
		                        android:id="@+id/num_likes"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="TextView" />
		                </LinearLayout>
		            </FrameLayout>

		        </FrameLayout>

		        <FrameLayout
		            android:id="@+id/frameLayout7"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_weight="1" 
		            android:padding="10dp">

		            <FrameLayout
		                android:id="@+id/linearLayout8"
		                android:layout_width="fill_parent"
		                android:layout_height="match_parent"
		                android:padding="1dp"
		                android:background="#FFF0F0F0" >

		                <LinearLayout
		                    android:id="@+id/comment_layout"
		                    android:layout_width="fill_parent"
		                    android:layout_height="match_parent" android:layout_gravity="center_horizontal" android:gravity="center_horizontal">

		                    <ImageView
		                        android:id="@+id/comment_image"
		                        android:layout_width="15dp"
		                        android:layout_height="15dp"
		                        android:src="@drawable/comment" />

		                    <TextView
		                        android:id="@+id/num_comments"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="TextView" />
		                </LinearLayout>
		            </FrameLayout>

		        </FrameLayout>
		
		    </LinearLayout>

        </LinearLayout>
        
    </ScrollView>
    <LinearLayout
        android:id="@+id/details_ad_space"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true"/>
    

</RelativeLayout>